# Ghostty terminal configuration
confirm-close-surface = false
window-padding-x = 0
window-padding-y = 0
unfocused-split-opacity = 0.5
unfocused-split-fill = #000000

# Custom css overrides
gtk-custom-css = style.css

# Shaders to make cursor look better
custom-shader = ~/.config/ghostty/shaders/cursor-blaze.glsl

# Font configuration
font-family = "Monaspace Neon NF"
font-style = Regular
font-style-bold = Bold
font-style-italic = Italic
font-style-bold-italic = Bold Italic

# Shell integration
shell-integration = fish

# Keybinds
keybind = ctrl+alt+shift+right=new_split:right
keybind = ctrl+alt+shift+left=new_split:left
keybind = ctrl+alt+shift+down=new_split:down
keybind = ctrl+alt+shift+up=new_split:up
